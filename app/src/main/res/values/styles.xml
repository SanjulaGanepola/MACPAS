<resources>

<!-- Base application theme. -->
<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
</style>

<style name="AppTheme.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
    <item name="android:windowAnimationStyle">@null</item>
</style>

<style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

<style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

<style name="DefaultColor" parent="ThemeOverlay.AppCompat">
    <item name="android:textColor">@android:color/black</item>
    <item name="android:background">@android:color/white</item>
</style>

<style name="WhiteOnBlackTheme" parent="ThemeOverlay.AppCompat">
    <item name="android:textColor">@android:color/white</item>
    <item name="android:colorButtonNormal">@android:color/black</item>
    <item name="android:background">@android:color/white</item>
</style>

<style name="BlueOnYellowTheme" parent="ThemeOverlay.AppCompat">
    <item name="android:textColor">#000080</item>
    <item name="android:colorButtonNormal">#FFFF00</item>
    <item name="android:background">#000080</item>
</style>

<style name="YellowOnBlueTheme" parent="ThemeOverlay.AppCompat">
    <item name="android:textColor">#FFFF00</item>
    <item name="android:colorButtonNormal">#000080</item>
    <item name="android:background">#FFFF00</item>
</style>

</resources>